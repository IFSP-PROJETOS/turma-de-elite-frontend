{
  "hosting": {
    "public": "dist/turma-de-elite-frontend",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [{
      "source":"**",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self';frame-src 'self';script-src 'self' 'unsafe-inline';style-src 'self' 'unsafe-inline' fonts.gstatic.com;font-src 'self' fonts.gstatic.com;img-src 'self' data:;connect-src 'self' www.googleapis.com turma-de-elite.herokuapp.com"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "same-origin"
        }
      ]
    }]
  }
}
